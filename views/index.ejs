<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Reviewt</title>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Caveat:wght@400;500;600;700&family=Tajawal:wght@200;300;400;500;700;800;900&family=Yanone+Kaffeesatz:wght@200;300;400;500;600;700&display=swap');
    </style>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

      <script
        src="https://code.jquery.com/jquery-3.5.1.min.js"
        charset="utf-8"
      ></script>


  </head>

  <header>

    <div class="nav">
      <div class="title-div">
        <h1 class= 'logo'><a class='logo' href="/main">Reviewt</a></h1>
      </div>

      <div class="profile-div">

        <button class='dark-mode' type="button" name="button"><i class="fas fa-moon"></i></button>
        <button class='light-mode' type="button" name="button"><i class="fas fa-sun"></i></button>

        <form action="/sessions?_method=DELETE" method="post">
          <button  class='logout' type="submit" name=""><i class="fas fa-sign-out-alt"></i></button>
        </form>
        <h2 class= 'username-nav'><%= currentUser.username %></h2>
        <a href="/main/profile"><img class='profile-img' src="<%= currentUser.img %>" alt="" onerror="this.src='https://unc.nc/wp-content/uploads/2020/07/Portrait_Placeholder.png'"></a>
      </div>
    </div>
  </header>

    <body class='body'>

    <div class="page">

      <!-- <a href="/authors">AUTHORS</a>
      <a href="/articles">ARTICLES</a> -->

      <a class = post href="/main/new">+</a>

      <div class="side-container">
        <a class = 'side-links' href="/main/profile">MY PROFILE</a>
        <a class = 'side-links' href="/main/new">POST</a>
        <a class = 'side-links' href="/main/users">REVIEWT USERS</a>
        <h2 class='latest'>Latest Users</h2>

        <a class='side-users' href="/main/show/<%=user[user.length -1].id%>"><%=user[user.length -1].username%></a>

        <a class='side-users' href="/main/show/<%=user[user.length -2].id%>"><%=user[user.length -2].username%></a>

        <a class='side-users' href="/main/show/<%=user[user.length -3].id%>"><%=user[user.length -3].username%></a>


      </div>


        <!-- <h1 class='top-title'>User's Reviews</h1> -->

      <div class="product-container">



        <% for (let i = review.length - 1; i >= 0; i--) { %>

          <div class="items-container">
          <h1 class='nameh1'><a class='name' href="/main/<%=review[i]._id%>"><%= review[i].name %></a></h1>
          <h2 class='title'><%= review[i].title %></h2>

          <div class="img-div">
            <a class='img-link' href="/main/<%=review[i]._id%>"> <img class='product-img' src="<%= review[i].img %>" alt="products"></a>
          </div>

          <h2 class='star' ><%=review[i].star%></h2>
          <a  class='by' >by <%=review[i].createdBy%></a>

          </div>
        <% } %>

      </div>

    </div>

  </body>

  <hr class='line-break'>

  <footer>

    <div class="foot">

      <div class="social">
        <a class='foot-links' href="https://www.linkedin.com/in/andy-checo-645a77208/">LinkedIn</a>

        <a class='foot-links' href="https://github.com/SavedCity">GitHub</a>
      </div>

      <div class="line">

      </div>

      <div class="tag">
        <a class='bottom-logo-link' href="/main"><h3 class='bottom-logo'>Reviewt</h3></a>
        <h3 class='my-name'><span style="font-weight: 300; color: #fff6">Developed by:</span> Andy Checo</h3>
      </div>

    </div>

  </footer>

  <script type="text/javascript">


    $(() => {


      $('.dark-mode').on('click', () => {
        $('.product-container').toggleClass('product-container-after')
        $('.side-container').toggleClass('side-container-after')
        $('.side-links').toggleClass('side-links-after')
        $('.side-users').toggleClass('side-users-after')
        $('.latest').toggleClass('latest-after')
        $('.logo').toggleClass('logo-after')
        $('.by').toggleClass('by-after')
        $('.star').toggleClass('star-after')
        $('.name').toggleClass('name-after')
        $('.title').toggleClass('title-after')
        $('.body').toggleClass('body-after')
        $('.post').toggleClass('post-after')
        $('.light-mode').toggleClass('light-mode-after')
        $('.dark-mode').toggleClass('dark-mode-after')
      })

      $('.light-mode').on('click', () => {
        $('.product-container').removeClass('product-container-after')
        $('.side-container').removeClass('side-container-after')
        $('.side-links').removeClass('side-links-after')
        $('.side-users').toggleClass('side-users-after')
        $('.latest').toggleClass('latest-after')
        $('.star').toggleClass('star-after')
        $('.by').toggleClass('by-after')
        $('.logo').toggleClass('logo-after')
        $('.name').removeClass('name-after')
        $('.title').removeClass('title-after')
        $('.body').removeClass('body-after')
        $('.post').removeClass('post-after')
        $('.dark-mode').toggleClass('dark-mode-after')
        $('.light-mode').toggleClass('light-mode-after')
      })


    })


  </script>

</html>
